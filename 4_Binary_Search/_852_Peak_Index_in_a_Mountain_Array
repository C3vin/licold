class Solution {
    public int peakIndexInMountainArray(int[] A) {
       
        int a = 0; 
        
        int b = A.length - 1;
        
        
        while(a < b){
            
            int mi = a + (b-a)/2;
            
            if(A[mi] < A[mi+1])
                a = mi + 1; 
            else 
                b = mi; 
            
        }
        
        
        return a; 
        
        
    }
}

 
